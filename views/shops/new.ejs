<%- include("../partials/header", {title: "New Coffee Shop"}) %>

<div class="container">
    <div class="form--add">
        <h2>Add Coffee Shop</h2>

        <form action="/shops" method="POST">
            <fieldset>
                <div class="form-group">
                    <label for="shopName">Coffee shop name</label>
                    <input id="shopName" name="shop[name]" type="text" class="form-control" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="shopAddress">Image</label>
                    <input id="shopAddress" name="shop[image]" type="text" class="form-control" placeholder="Image">
                </div>
                <div class="form-group">
                    <label for="shopAddress">Address</label>
                    <input id="shopAddress" name="shop[address]" type="text" class="form-control" placeholder="Address">
                </div>
            </fieldset>
            <input type="submit" value="Submit"> 
        </form>
    </div>


</div>

<%- include("../partials/footer") %>